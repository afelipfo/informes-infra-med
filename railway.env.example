# Variables de entorno para Railway - Sistema de Informes Infraestructura Medellín
# Copia este archivo y renómbralo a .env en Railway

# =============================================================================
# CONFIGURACIÓN BÁSICA
# =============================================================================

# Entorno de ejecución
ENVIRONMENT=production
DEBUG=false

# Configuración de la aplicación
PROJECT_NAME="Sistema de Informes - Infraestructura Medellín"
API_V1_STR=/api/v1

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Clave secreta para JWT (¡CAMBIA ESTA CLAVE!)
SECRET_KEY=tu_clave_secreta_muy_larga_y_segura_aqui_cambiala_por_una_real
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CONFIGURACIÓN DE CORS
# =============================================================================

# Orígenes permitidos (para producción, especifica dominios específicos)
CORS_ORIGINS=*

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Formato de logs
LOG_FORMAT=json
LOG_LEVEL=info

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================================================

# Directorio de uploads
UPLOAD_DIR=/app/temp
MAX_FILE_SIZE=10485760

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS (OPCIONAL)
# =============================================================================

# URL de conexión a PostgreSQL (Railway proporciona esta variable automáticamente)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# =============================================================================
# CONFIGURACIÓN DE CACHE (OPCIONAL)
# =============================================================================

# URL de conexión a Redis (Railway proporciona esta variable automáticamente)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# Habilitar métricas
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# CONFIGURACIÓN DE RATE LIMITING
# =============================================================================

# Límites de rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# CONFIGURACIÓN DE IA
# =============================================================================

# Configuración del motor de IA
AI_MODEL_CACHE_SIZE=100
AI_ANALYSIS_TIMEOUT=300

# =============================================================================
# CONFIGURACIÓN DE OPTIMIZACIÓN
# =============================================================================

# Configuración de workers
WORKERS=1

# Configuración de memoria
MAX_MEMORY=2G

# =============================================================================
# CONFIGURACIÓN DE DOMINIO (OPCIONAL)
# =============================================================================

# Dominio personalizado (configurar en Railway)
# CUSTOM_DOMAIN=tu-app.com

# =============================================================================
# CONFIGURACIÓN DE BACKUP (OPCIONAL)
# =============================================================================

# Habilitar backup automático
ENABLE_BACKUP=false
BACKUP_INTERVAL=24h

# =============================================================================
# CONFIGURACIÓN DE NOTIFICACIONES (OPCIONAL)
# =============================================================================

# Webhook para notificaciones
# WEBHOOK_URL=https://hooks.slack.com/services/...

# =============================================================================
# CONFIGURACIÓN DE ANÁLISIS (OPCIONAL)
# =============================================================================

# Habilitar análisis detallado
ENABLE_DETAILED_ANALYSIS=true
ANALYSIS_CACHE_TTL=3600

# =============================================================================
# CONFIGURACIÓN DE REPORTES (OPCIONAL)
# =============================================================================

# Formato de reportes por defecto
DEFAULT_REPORT_FORMAT=json
ENABLE_PDF_EXPORT=false

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD AVANZADA (OPCIONAL)
# =============================================================================

# Habilitar autenticación
ENABLE_AUTH=false

# Configuración de sesiones
SESSION_SECRET=otra_clave_secreta_para_sesiones
SESSION_TTL=3600

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO (NO USAR EN PRODUCCIÓN)
# =============================================================================

# Solo para desarrollo local
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=debug
